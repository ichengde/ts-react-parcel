{
  "name": "ts-react-parcel",
  "version": "0.0.1",
  "description": "Typescript with React, using parcel bundler",
  "repository": {
    "type": "git",
    "url": "https://github.com/ichengde/ts-react-parcel"
  },
  "main": "index.js",
  "scripts": {
    "watch": "parcel watch src/index.html --out-dir dist/ --public-url ./",
    "develop": "parcel ./src/index.html",
    "build": "parcel build ./src/index.html --public-url '/'",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/test-shim.js",
      "<rootDir>/config/test-setup.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "hooks": {
    "pre-commit": "npm run lint"
  },
  "keywords": [
    "Typescript",
    "React",
    "Parcel"
  ],
  "author": "ichengde",
  "license": "MIT",
  "dependencies": {
    "react": "^16.3.2",
    "react-dom": "^16.3.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.9",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.11",
    "@types/react-dom": "^16.0.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "husky": "^1.0.0-rc.13",
    "jest": "^22.4.3",
    "parcel-bundler": "^1.7.1",
    "parcel-plugin-typescript": "^0.7.0",
    "prettier": "^1.12.1",
    "react-test-renderer": "^16.3.2",
    "ts-jest": "^22.4.3",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1"
  }
}